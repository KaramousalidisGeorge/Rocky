@model IEnumerable<Rocky.Models.ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of application types:</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Application Type
            </a>
        </div>
    </div>


    <br /><br />

    @if (Model.Count() > 0)//if there is a application type display the table
    {
        <table class="table table-bordered table table-striped" style="width:120%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>

                    <th>Edit - Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="40%">@obj.Name</td>
                        <td class="text-center" width="40%">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ApplicationType" asp-route-Id="@obj.CategoryId" asp-action="Edit" class="btn btn-primary mx-2 ">
                                    <i class="fas fa-edit"></i>&nbsp;
                                </a>

                                <a asp-controller="ApplicationType" asp-route-Id="@obj.CategoryId" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>&nbsp;
                                </a>

                            </div>


                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No application type exists</p>
    }

</div>

