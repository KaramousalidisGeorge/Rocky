@model IEnumerable<Rocky.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of categories:</h2>
        </div>
        <div class="col-6">
            <a  asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>

    
    <br/><br/>

    @if(Model.Count()>0)//if there is a category display the table
    {
        <table class="table table-bordered table table-striped" style="width:120%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>

                    <th>DisplayOrder</th>
                    <th>Edit - Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="40%">@obj.Name</td>
                    <td width="40%">@obj.DisplayOrder</td>
                    <td class="text-center" width="40%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-route-Id="@obj.CategoryId" asp-action="Edit" class="btn btn-primary mx-2 " >
                                <i class="fas fa-edit"></i>&nbsp; 
                            </a>
                           
                                <a asp-controller="Category" asp-route-Id="@obj.CategoryId" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>&nbsp;  
                                </a>
                            
                        </div>


                    </td>
                </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No category exists</p>
    }

</div> 

